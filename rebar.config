{erl_opts, [debug_info]}.
{src_dirs, ["src", "gen/src"]}.

{profiles, [
    {test, [{src_dirs, ["src", "test", "gen/src", "gen/test"]}]}
]}.

{shell, [
    {apps, [qr_push]}
]}.


% Not actually using rebar run but like it because release
{project_plugins, [rebar_gleam, rebar3_run]}.

{deps, [
    {base32, "0.1.0"},
    % {gleam_stdlib, "0.9.0"},
    {gleam_stdlib, {git, "git://github.com/gleam-lang/stdlib.git"}},
    {midas, {git, "git://github.com/midas-framework/midas.git"}},
    {pgo, "0.11.0"}
]}.

{relx, [{release, {app, "0.1.0"},
         [qr_push,
          sasl]},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]
}.
